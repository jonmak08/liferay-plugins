		<div style="background: url(https://dl.dropbox.com/u/101485540/Pensive-Parakeet-carousel.png); width: 975px; height: 290px;" class="aui-carousel-item" alt="Article 2"></div>
		<div style="background: url(https://dl.dropbox.com/u/101485540/new-voltswagon-carousel.png); width: 975px; height: 290px;" class="aui-carousel-item" alt="Article 3"></div>
		<div style="background: url(https://dl.dropbox.com/u/101485540/Boston-City-carousel.png); width: 975px; height: 290px;" class="aui-carousel-item" alt="Article 4"></div>
		<div style="background: url(https://dl.dropbox.com/u/101485540/Costa-Rican-Frog-carousel.png); width: 975px; height: 290px;" class="aui-carousel-item" alt="Article 5"></div>
		<div style="background: url(https://dl.dropbox.com/u/101485540/Pensive-Parakeet-carousel.png); width: 975px; height: 290px;" class="aui-carousel-item" alt="Article 6"></div>
		<div style="background: url(https://dl.dropbox.com/u/101485540/new-voltswagon-carousel.png); width: 975px; height: 290px;" class="aui-carousel-item" alt="Article 7"></div>
	</div>
</div>

<script type="text/javascript" charset="utf-8">

AUI().ready('aui-carousel', function(A) {

	var component = new A.Carousel(
		{
			intervalTime: 5,
			contentBox: '#demo',
			activeIndex: 0,
			// activeIndex: 'rand',
			height: 254,
			width: 940
			// nodeMenu: '#customMenu',
			// nodeMenuItemSelector: 'li'
		}
	).render();
});

</script>
<!-- END CAROUSEL CODE -->

		#if ($selectable)
			$theme.include($content_include)
		#else
			$portletDisplay.recycle()

			$portletDisplay.setTitle($the_title)

			$theme.wrapPortlet("portlet.vm", $content_include)
		#end
	</div>

	<footer id="footer" role="contentinfo">
		<p class="powered-by">
			#language("powered-by") <a href="http://www.liferay.com" rel="external">Liferay</a>
		</p>
	</footer>
</div>

$theme.include($body_bottom_include)

</body>

$theme.include($bottom_include)

</html>