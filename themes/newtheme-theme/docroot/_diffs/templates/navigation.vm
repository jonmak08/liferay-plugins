<div class="navbar span8">
	<nav class="$nav_css_class navbar-inner" id="navigation">

			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
			</a>

			<h1>
				<span>#language ("navigation")</span>
			</h1>

			<div class="nav-collapse collapse" style="height: 0px;">
				<ul class="nav">
					#foreach ($nav_item in $nav_items)
						#if ($nav_item.isSelected() && $nav_item.hasChildren())
							<li class="active dropdown" id="layout_$nav_item.getLayoutId()">
							<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()</span>
								<b class="caret"></b>
							</a>
						#elseif ($nav_item.isSelected())
							<li class="active" id="layout_$nav_item.getLayoutId()">
							<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()</span></a>
						#elseif ($nav_item.hasChildren())
							<li class="dropdown" id="layout_$nav_item.getLayoutId()">
							<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()</span>
								<b class="caret"></b>
							</a>
						#else
							<li id="layout_$nav_item.getLayoutId()">
							<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()</span></a>
						#end
							#if ($nav_item.hasChildren())
								<ul class="dropdown-menu">
									#foreach ($nav_child in $nav_item.getChildren())
										#if ($nav_child.isSelected())
											<li class="active" id="layout_$nav_child.getLayoutId()">
										#else
											<li id="layout_$nav_child.getLayoutId()">
										#end
											<a href="$nav_child.getURL()" $nav_child.getTarget()>$nav_child.getName()</a>
										</li>
									#end
								</ul>
							#end
						</li>
					#end
				</ul>
			</div>

	</nav>
</div>