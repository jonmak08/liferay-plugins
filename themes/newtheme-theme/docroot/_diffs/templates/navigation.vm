<div class="navbar span8">
	<nav class="$nav_css_class navbar-inner" id="navigation">
		<a class="btn btn-navbar">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</a>

		<h1>
			<span>#language ("navigation")</span>
		</h1>

		<div class="nav-collapse" id="collapse-content">
			<ul class="nav">
				#foreach ($nav_item in $nav_items)
					#set($nav_item_class = "")
					#set($caret = "")

					#if ($nav_item.isSelected())
						#set($nav_item_class = "$nav_item_class active")
					#end

					#if ($nav_item.hasChildren())
						#set($nav_item_class = "$nav_item_class dropdown")
						#set($caret = '<b class="caret"></b>')
					#end

					<li class="$nav_item_class" id="layout_$nav_item.getLayoutId()">
						<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()</span>
							$caret
						</a>
						#if ($nav_item.hasChildren())
							<ul class="dropdown-menu">
								#foreach ($nav_child in $nav_item.getChildren())
									#if ($nav_child.isSelected())
										<li class="active" id="layout_$nav_child.getLayoutId()">
									#else
										<li id="layout_$nav_child.getLayoutId()">
									#end
										<a href="$nav_child.getURL()" $nav_child.getTarget()>$nav_child.getName()</a>
									</li>
								#end
							</ul>
						#end
					</li>
				#end
			</ul>
		</div>
	</nav>
</div>