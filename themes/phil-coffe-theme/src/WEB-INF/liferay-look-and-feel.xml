<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="phil-coffe-theme" name="phil coffe theme">
		<template-extension>ftl</template-extension>

		<settings>
			<setting configurable="true" key="show-title" type="checkbox" value="true" />
			<setting configurable="true" key="title" value="Coffe is Mispelled" />
			<setting configurable="true" key="show-author" type="checkbox" value="true" />
			<setting configurable="true" key="creator" value="Philip C. Lee" />
			<setting configurable="true" key="facebook" type="checkbox" value="true" />
			<setting configurable="true" key="Facebook-address" value="http://www.facebook.com" />
			<setting configurable="true" key="Linkedin" type="checkbox" value="true" />
			<setting configurable="true" key="Linkedin-page" value="http://www.linkedin.com" />
			<setting configurable="true" key="Instagram" type="checkbox" value="true" />
			<setting configurable="true" key="Instagram-channel" value="http://www.instagram.com" />
			<setting configurable="true" key="Pinterest" type="checkbox" value="true" />
			<setting configurable="true" key="Pinterest-channel" value="http://www.pinterest.com" />
			<setting configurable="true" key="Twitter" type="checkbox" value="true" />
			<setting configurable="true" key="Twitter-channel" value="http://www.twitter.com" />
			<setting configurable="true" key="Youtube" type="checkbox" value="true" />
			<setting configurable="true" key="Youtube-channel" value="http://www.youtube.com" />
		</settings>

		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
